{
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "web": true,
    "assets": ["dist/*"]
  },
  "hooks": {
    "after:bump": "yarn build:prod",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "npm": {
    "publish": true,
    "access": "public",
    "release": true,
    "skipChecks": true
  }
}
